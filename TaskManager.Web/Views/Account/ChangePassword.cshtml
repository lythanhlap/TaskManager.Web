@model TaskManager.Web.Models.ChangePasswordVm
@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<div class="container mt-4" style="max-width:520px;">
    <div class="card shadow-sm" style="border-radius:16px;">
        <div class="card-body">
            <h3 class="mb-3">🔒 Đổi mật khẩu</h3>

            @if (ViewBag.SuccessNow is string msg)
            {
                <div class="alert alert-success" role="alert">@msg</div>

                <form id="autoLogoutForm" asp-action="Logout" method="post" class="d-none">
                    @Html.AntiForgeryToken()
                </form>
                <script>
                    setTimeout(function() {
                        document.getElementById('autoLogoutForm').submit();
                    }, 2000); // 2 giây rồi mới logout
                </script>
            }

            <form asp-action="ChangePassword" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="OldPassword" class="form-label"></label>
                    <input asp-for="OldPassword" class="form-control" />
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NewPassword" class="form-label"></label>
                    <input asp-for="NewPassword" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ConfirmNewPassword" class="form-label"></label>
                    <input asp-for="ConfirmNewPassword" class="form-control" />
                    <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                </div>

                <button class="btn btn-primary" type="submit">Cập nhật</button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-link">Về trang chủ</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
