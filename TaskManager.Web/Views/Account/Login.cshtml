@model TaskManager.Web.Models.LoginVm
@{
    ViewData["Title"] = "Đăng nhập";
}

<link rel="stylesheet" href="~/css/login.css" />

<div class="login-container">
    <!-- Bên trái: Logo + slogan -->
    <div class="login-info">
        <h1 class="logo">Task Manager</h1>
        <p class="slogan">Trợ thủ quản lý công việc thân thiện của bạn</p>
    </div>

    <!-- Bên phải: Form đăng nhập -->
    <div class="login-form-box">
        <h2 class="form-title">Đăng nhập</h2>

        <form asp-action="Login" method="post" asp-route-returnUrl="@Model?.ReturnUrl" class="login-form">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>

            <div class="form-group">
                <label asp-for="Identifier" class="form-label">Tên đăng nhập hoặc Email</label>
                <input asp-for="Identifier" class="form-control" />
                <span asp-validation-for="Identifier" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="form-label">Mật khẩu</label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            @if (ViewBag.Error is string err)
            {
                <div class="alert alert-danger" role="alert">@err</div>
            }

            <button type="submit" class="btn-login">Đăng nhập</button>
        </form>

        <p class="register-text">
            Chưa có tài khoản?
            <a asp-action="Register" asp-controller="Account" class="link-register">Đăng ký ngay</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
