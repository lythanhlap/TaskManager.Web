@using TaskManager.Projects.Abstractions
@model IEnumerable<ProjectDto>

@{
    ViewData["Title"] = "Dashboard";
    var userName = User?.Identity?.Name ?? "Test I";
}

<div class="container-fluid my-3">
    <div class="tm-shell">
        <!-- Header -->
        <div class="tm-top px-3 py-2">
            <div class="row g-2 align-items-center">
                <div class="col-12 col-md-3 d-flex justify-content-md-start justify-content-center">
                    <div class="tm-logo px-3 py-2">Task Manager</div>
                </div>
                <div class="col-12 col-md-7 tm-search">
                    <input type="search" class="form-control" placeholder="Tìm kiếm" aria-label="Tìm kiếm" />
                </div>
                <div class="col-12 col-md-2 d-flex justify-content-md-end justify-content-center">
                    <a href="/Account" class="tm-account">Account</a>
                </div>
            </div>
        </div>

        <!-- Body -->
        <div class="tm-body">
            <div class="row gx-3">
                <!-- Left -->
                <div class="col-lg-3 tm-col tm-left">
                    <div class="tm-panel top mb-3">
                        <h5 class="text-center">Trang chủ</h5>
                    </div>
                    <div class="tm-panel main"></div>
                </div>

                <!-- Main -->
                <div class="col-lg-9 tm-col">
                    <div class="tm-main">
                        <div class="tm-banner mb-3">
                            <div class="tm-hello">Xin chào @userName</div>
                        </div>

                        <div class="tm-section">Dự án của bạn</div>

                        <div class="tm-cards">
                            @if (Model != null && Model.Any())
                            {
                                foreach (var p in Model)
                                {
                                    <a class="tm-card" href="/projects/@p.Id" title="@p.Name">@p.Name</a>
                                }
                            }
                            else
                            {
                                <div class="tm-card">Chưa có dự án</div>
                            }
                            <a class="tm-card new" href="/projects/create">Tạo dự án mới</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
