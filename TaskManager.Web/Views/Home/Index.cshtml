@{
    ViewData["Title"] = "Bảng điều khiển";
    var userName = User.Identity?.Name?.Split('@')[0] ?? "bạn";
    var welcomeMessage = $"Chào mừng trở lại, {userName}! 👋";
    var taskCount = 3;
}


<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trình Quản Lý Công Việc</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

    <style>
        :root {
            --primary-color: #0d6efd;
            --primary-hover: #0b5ed7;
            --light-bg: #f8f9fa;
            --card-bg: #ffffff;
            --text-dark: #212529;
            --text-muted: #6c757d;
            --card-shadow: 0 4px 12px rgba(0, 0, 0, 0.07);
            --card-hover-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
            --border-radius: 12px;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            margin: 0;
            background-color: var(--light-bg);
            color: var(--text-dark);
        }

        .container {
            max-width: 100vw;
            margin: 0 auto;
            padding: 2rem 3rem;
        }

        .hero-section {
            background: #e9f2ff;
            padding: 4rem 2rem;
            border-radius: var(--border-radius);
            text-align: center;
            color: #0052cc;
        }

            .hero-section h1 {
                color: #0052cc;
            }

            .hero-section p {
                color: #42526e;
            }

        .btn {
            display: inline-block;
            text-decoration: none;
            font-weight: 600;
            padding: 12px 28px;
            border-radius: 8px;
            transition: all 0.3s ease;
            cursor: pointer;
            border: none;
        }
        .btn-primary {
            background-color: var(--primary-color);
            color: white;
            box-shadow: 0 4px 15px rgba(13, 110, 253, 0.25);
        }
        .btn-primary:hover {
            background-color: var(--primary-hover);
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(13, 110, 253, 0.35);
        }
        .ms-2 { margin-left: 0.5rem; }

        .features-section {
            margin-top: 3.5rem;
        }
        .section-title {
            text-align: center;
            color: #0052cc;
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 2.5rem;
        }
        .features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 1.5rem;
        }

        .feature-card {
            display: flex;
            align-items: flex-start;
            gap: 1.5rem;
            background-color: var(--card-bg);
            padding: 2rem;
            border-radius: var(--border-radius);
            box-shadow: var(--card-shadow);
            transition: all 0.3s ease;
            text-decoration: none;
            color: inherit;
        }
        .feature-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--card-hover-shadow);
        }
        .feature-icon {
            font-size: 1.5rem;
            padding-top: 5px;
        }
        .feature-content h3 {
            font-size: 1.25rem;
            font-weight: 600;
            margin: 0 0 0.5rem 0;
        }
        .feature-content p {
            color: var(--text-muted);
            margin: 0;
        }

        footer {
            text-align: center;
            padding: 2rem 0;
            margin-top: 2rem;
            color: var(--text-muted);
        }

        .fw-bold { font-weight: 700 !important; }
        .text-primary { color: var(--primary-color) !important; }
        .text-info { color: #0dcaf0 !important; }
        .text-success { color: #198754 !important; }
        .text-warning { color: #ffc107 !important; }

        .hero-title {
            font-size: 2.8rem;
            font-weight: 700;
        }
    </style>
</head>
<body>
    <div class="container">
        @if (User.Identity.IsAuthenticated)
        {
            <section class="hero-section">
                <h1 class="hero-title">@ViewBag.WelcomeMessage</h1>
                <p>Bạn có <span class="fw-bold text-primary">@taskCount công việc</span> cần hoàn thành hôm nay. Hãy bắt đầu nào!</p>
                <a class="btn btn-primary" href="/Dashboard">
                    Tới bảng điều khiển <i class="fas fa-arrow-right ms-2"></i>
                </a>
            </section>

            <section class="features-section">
                <h2 class="section-title">Bảng điều khiển của bạn</h2>
                <div class="features-grid">
                    <a href="/Projects" class="feature-card">
                        <div class="feature-icon text-info">
                            <i class="fas fa-folder-open"></i>
                        </div>
                        <div class="feature-content">
                            <h3>Dự án đang hoạt động</h3>
                            <p>Theo dõi tiến độ và cộng tác cùng đội nhóm.</p>
                        </div>
                    </a>
                    <a href="/Tasks" class="feature-card">
                        <div class="feature-icon text-success">
                            <i class="fas fa-tasks"></i>
                        </div>
                        <div class="feature-content">
                            <h3>Công việc hôm nay</h3>
                            <p>Tập trung vào danh sách công việc ưu tiên của bạn.</p>
                        </div>
                    </a>
                    <a href="/Notifications" class="feature-card">
                        <div class="feature-icon text-warning">
                            <i class="fas fa-bell"></i>
                        </div>
                        <div class="feature-content">
                            <h3>Thông báo mới</h3>
                            <p>Kiểm tra cập nhật và các hạn chót quan trọng.</p>
                        </div>
                    </a>
                </div>
            </section>
        }
        else
        {
            <p>Vui lòng đăng nhập để xem nội dung.</p>
        }

    </div>
</body>
</html>