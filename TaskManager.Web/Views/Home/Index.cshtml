@{
    ViewData["Title"] = "Welcome to MEoW";
}

@if (User.Identity.IsAuthenticated)
{
    <div class="hero-section text-center mt-5">
        <h1 class="display-4">🐾 @ViewBag.WelcomeMessage</h1>
        <p class="lead">Glad to see you again. Ready to conquer your tasks today?</p>
        <a class="btn btn-primary btn-lg mt-3" href="/Projects">Go to Dashboard</a>
    </div>

    <div class="features-section mt-5">
        <h2 class="section-title">📊 Your Productivity Hub</h2>
        <div class="features-grid">
            <div class="feature-box">
                <h3>📁 Active Projects</h3>
                <p>Track your ongoing projects and collaborate with your team.</p>
            </div>
            <div class="feature-box">
                <h3>✅ Today's Tasks</h3>
                <p>Stay focused with your prioritized task list.</p>
            </div>
            <div class="feature-box">
                <h3>🔔 Notifications</h3>
                <p>Check updates and deadlines you shouldn't miss.</p>
            </div>
        </div>
    </div>
}

else
{
    <div class="hero-section text-center">
        <h1 class="display-4">🐾 Welcome to <span class="brand">MEoW</span></h1>
        <a class="btn btn-primary btn-lg mt-3" href="/Account/Register">Get Started</a>
    </div>

    <div class="features-section">
        <h2 class="section-title">✨ What You Can Do with MEoW</h2>
        <div class="features-grid">
            <div class="feature-box">
                <h3>📁 Manage Projects</h3>
                <p>Create, track, and collaborate on multiple projects with ease.</p>
            </div>
            <div class="feature-box">
                <h3>✅ Organize Tasks</h3>
                <p>Stay productive with smart task lists and progress tracking.</p>
            </div>
            <div class="feature-box">
                <h3>🔔 Stay Notified</h3>
                <p>Get real-time updates so you never miss a deadline.</p>
            </div>
        </div>
    </div>

    <div class="cta-section">
        <h2>Ready to boost your productivity?</h2>
        <p>Join MEoW today and simplify your workflow.</p>
        <a href="/Account/Register" class="btn btn-primary btn-lg">Create Your Account</a>
    </div>
}