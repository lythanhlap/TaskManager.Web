@page
@using Microsoft.AspNetCore.Identity
@{
    Layout = null; 
}

@if (User.Identity != null && User.Identity.IsAuthenticated)
{
    <script>
        window.location.href = '/Home/Index';
    </script>
}
else
{
    <!DOCTYPE html>
    <html lang="vi">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>TaskManager</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
        <style>
            header {
                background-color: #F4F5F7;
            }
            body {
                background-color: #F4F5F7;
                font-family: Arial, sans-serif;
            }
            .navbar-brand {
                font-weight: bold;
                color: #0052cc !important;
            }
            .banner {
                background-color: #e9f2ff;
                color: #172b4d;
                font-size: 14px;
                padding: 10px;
                text-align: center;
            }
            .hero {
                padding: 80px 0;
            }
            .hero h1 {
                font-size: 2.5rem;
                font-weight: bold;
                color: #172b4d;
            }
            .hero p {
                font-size: 1.2rem;
                margin-bottom: 1.5rem;
                color: #42526e;
            }
            .form-control {
                max-width: 350px;
            }
            .btn-primary {
                background-color: #0052cc;
                border-color: #0052cc;
            }
        </style>
    </head>
    <body>

        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg bg-white shadow-sm">
            <div class="container">
                <a class="navbar-brand" href="#">TaskManager</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" href="#">Tính năng</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Giải pháp</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Gói</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Tài liệu</a></li>
                    </ul>
                    <div>
                        <a href="/Account/Login" class="btn btn-primary">Quản lí dự án của bạn</a>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Banner -->
        <div class="banner">
            Tăng tốc công việc nhóm của bạn với AI tích hợp 🚀 — khả dụng cho tất cả gói Premium & Enterprise!
            <a href="#" class="ms-1">Tìm hiểu thêm</a>
        </div>

        <!-- Hero Section -->
        <section class="hero">
            <div class="container">
                <div class="row align-items-center">
                    <!-- Text -->
                    <div class="col-lg-6">
                        <h1>Ghi lại, sắp xếp và giải quyết công việc từ bất cứ đâu.</h1>
                        <p>Thoát khỏi tình trạng lộn xộn và hỗn loạn – giải phóng năng suất của bạn với TaskManager.</p>
                        <a href="/Account/Register" class="btn btn-primary gap-2">Đăng kí miên phí</a>
                        <small class="d-block mt-2 text-muted">
                            Khi đăng kí bạn đồng ý với <a href="#">chính sách bảo mật</a>.
                        </small>
                    </div>

                    <!-- Image -->
                    <div class="col-lg-6 text-center">
                        <img src="https://miro.medium.com/v2/resize:fit:1100/format:webp/1*4o2wMjmPgbPZmvtrO6L3vA.png"
                             class="img-fluid" alt="App Screenshot">
                    </div>
                </div>
            </div>
        </section>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    </body>
    </html>
}
