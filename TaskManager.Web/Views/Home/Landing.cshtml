@page
@using Microsoft.AspNetCore.Identity
@{
    Layout = null;
}

@if (User.Identity != null && User.Identity.IsAuthenticated)
{
    <script>
        window.location.href = '/Home/Index';
    </script>
}
else
{
    <!DOCTYPE html>
    <html lang="vi">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>TaskManager</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

        <style>
            body {
                font-family: 'Segoe UI', Arial, sans-serif;
                background-color: #FFD6E0;
                color: #333;
            }

            .navbar {
                background: linear-gradient(90deg, #ffbfd3, #ffdee9);
                padding: 15px 40px;
                display: flex;
                justify-content: space-between;
                align-items: center;
                border-bottom: 2px solid #f8a6c9;
                box-shadow: 0 4px 10px rgba(232, 62, 140, 0.15);
                border-radius: 0 0 18px 18px;
            }

            .navbar-brand {
                font-size: 1.6rem;
                font-weight: 700;
                color: #d63384;
                text-decoration: none;
                letter-spacing: 1px;
                transition: transform 0.2s, color 0.3s;
                font-family: 'Poppins', sans-serif;
            }

                .navbar-brand:hover {
                    transform: scale(1.05);
                    color: #e83e8c;
                    text-shadow: 0 0 6px rgba(232, 62, 140, 0.3);
                }

            .navbar-nav {
                display: flex;
                gap: 25px;
            }

                .navbar-nav a {
                    color: #d63384;
                    font-weight: 500;
                    text-decoration: none;
                    font-size: 1rem;
                    transition: color 0.3s, transform 0.2s;
                    position: relative;
                    font-family: 'Poppins', sans-serif;
                }

                    .navbar-nav a:hover {
                        color: #b52d6f;
                        transform: translateY(-2px);
                    }

                    .navbar-nav a::after {
                        content: '';
                        display: block;
                        height: 2px;
                        width: 0;
                        background: #d63384;
                        transition: width 0.3s;
                        margin-top: 4px;
                        border-radius: 4px;
                    }

                    .navbar-nav a:hover::after {
                        width: 100%;
                    }

            /* Button */
            .btn-primary {
                background-color: #e60073;
                border: none;
                padding: 10px 20px;
                font-weight: 500;
                border-radius: 30px;
            }

                .btn-primary:hover {
                    background-color: #cc0066;
                }

            /* Banner */
            .banner {
                background-color: #FFD6E0;
                color: #333;
                font-size: 15px;
                padding: 12px;
                text-align: center;
            }

                .banner a {
                    color: #e60073;
                    text-decoration: none;
                    font-weight: 500;
                }

                    .banner a:hover {
                        text-decoration: underline;
                    }

            /* Hero section */
            .hero {
                padding: 80px 0;
            }

                .hero h1 {
                    font-size: 2.5rem;
                    font-weight: bold;
                    color: #cc0066;
                }

                .hero p {
                    font-size: 1.2rem;
                    margin-bottom: 1.5rem;
                    color: #555;
                }

                .hero img {
                    max-width: 90%;
                    border-radius: 20px;
                    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
                }
        </style>
    </head>
    <body>

        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg shadow-sm">
            <div class="container">
                <a class="navbar-brand" href="#">Task Manager</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" href="#">Tính năng</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Giải pháp</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Gói</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Tài liệu</a></li>
                    </ul>
                    <div>
                        <a href="/Account/Login" class="btn btn-primary">Quản lí dự án của bạn</a>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Banner -->
        <div class="banner">
            💖 Tăng hiệu quả quản lí công việc với <b>Task Manager</b>
            <a href="#" class="ms-1">Xem thêm</a>
        </div>

        <!-- Hero Section -->
        <section class="hero">
            <div class="container">
                <div class="row align-items-center">
                    <!-- Text -->
                    <div class="col-lg-6">
                        <h1>Ghi lại, sắp xếp và hoàn thành công việc từ bất cứ đâu.</h1>
                        <p>Thoát khỏi sự lộn xộn và hỗn loạn – giải phóng năng suất của bạn với Task Manager.</p>
                        <a href="/Account/Register" class="btn btn-primary gap-2">Bắt đầu miễn phí</a>
                        <small class="d-block mt-2 text-muted">
                            Khi đăng ký, bạn đồng ý với <a href="#">chính sách bảo mật</a>.
                        </small>
                    </div>

                    <!-- Image -->
                    <div class="col-lg-6 text-center">
                        <img src="~/img/landing_img.png" class="img-fluid" alt="App Screenshot">
                    </div>
                </div>
            </div>
        </section>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    </body>
    </html>
}