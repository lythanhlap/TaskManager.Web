@using TaskManager.Projects.Abstractions
@model ProjectEditVm
@{
    ViewData["Title"] = "Chỉnh sửa dự án";
}
<h2>Chỉnh sửa dự án</h2>

<form asp-action="Edit" asp-route-id="@Model.Id" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Tên dự án</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Mô tả</label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-md-4 mb-3">
            <label asp-for="StartDate" class="form-label">Ngày bắt đầu</label>
            <input asp-for="StartDate" type="date" class="form-control" />
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="EndDate" class="form-label">Ngày kết thúc</label>
            <input asp-for="EndDate" type="date" class="form-control" />
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="Status" class="form-label">Trạng thái</label>
            <select asp-for="Status" class="form-select"
                    asp-items="Html.GetEnumSelectList<ProjectStatus>()"></select>
        </div>
    </div>

    <button class="btn btn-primary" type="submit">Lưu</button>
    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary ms-2">Hủy</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
